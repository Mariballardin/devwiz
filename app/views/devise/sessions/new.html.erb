<%= stylesheet_link_tag 'users/new' %>

<div class="form">
  <div id="hat">
    <div class="img">
      <%= image_tag 'hat.svg' %>
    </div>
  <h2>Log in</h2>

  </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto form-actions">


        <%= f.button :submit, value: "login", class: "btn btn-primary mt-4 Log in", id:"roun" %>
      </div>

      <div class="sc-edd8a27f-0 hYQooG"><span color="#7A7A68" style="text-align:center;padding-left:2.07rem;padding-right:2.07rem" class="sc-bczRLJ ggixay">OR</span></div>



      <div class="bts">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
