<%= stylesheet_link_tag 'prompts/index' %>

<div id="hat">
  <div class="img">
    <%= image_tag 'hat.svg' %>
  </div>
  <h2>My challenges</h2>
</div>

<div class="d-flex">
  <div class="container-fluid">
  <div class="title">
    <% @prompts.each do |prompt| %>
    <h4><%= prompt.programming_language %></h4>
    <li><%= link_to 'Try again', prompt_path(prompt) %></li>
    <li><%= link_to 'See my reviews', prompt_code_reviews_path(prompt) %></li>
    <% end %>
  </div>
</div>
</div>
  <%= link_to 'Back', root_path, id:"botao", class: 'btn btn-primary rounded' %>
